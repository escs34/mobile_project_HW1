<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="#A6E073"
        android:orientation="vertical">

        <TextView
            android:id="@+id/this_title"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="로또 번호 추첨기!\n이거로 오늘 당첨되세요!"/>
    </LinearLayout>


    <TableRow>
        <TextView
            android:background="#AAAAAA"
            android:id="@+id/input_1th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:text="1번" />

        <TextView
            android:background="#BBBBBB"
            android:id="@+id/input_2th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:text="2번" />

        <TextView
            android:background="#CCCCCC"
            android:id="@+id/input_3th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:text="3번" />

    </TableRow>

    <TableRow>
        <TextView
            android:background="#DDDDDD"
            android:id="@+id/input_4th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:text="4번" />

        <TextView
            android:background="#EEEEEE"
            android:id="@+id/input_5th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:text="5번" />

        <TextView
            android:background="#FFFFFF"
            android:id="@+id/input_6th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:text="6번" />

    </TableRow>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

    <TextView
        android:background="#888888"
        android:id="@+id/input_7th"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="마지막 행운번호!"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#00FF00"
        android:orientation="vertical">


        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/start_lottery"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:text="쏘세요~" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/go_back2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="되돌아가기" />

        <TextView
            android:layout_marginTop="90dp"
            android:layout_centerHorizontal="true"
            android:background="#888888"
            android:id="@+id/result"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:text="두구두구~~"/>
    </LinearLayout>
</TableLayout>
